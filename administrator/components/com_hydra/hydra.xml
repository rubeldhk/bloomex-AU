<install>
    <queries>
      <query>DROP TABLE IF EXISTS `#__hydra_comments`</query>
      <query>
      CREATE TABLE `#__hydra_comments` (
                   `comment_id` int(11) NOT NULL auto_increment,
                   `area` varchar(56) NOT NULL default '',
                   `text` text NOT NULL,
                   `creator` int(11) NOT NULL default '0',
                   `task` int(11) NOT NULL default '0',
                   `doc` int(11) NOT NULL default '0',
                   `data` int(11) NOT NULL default '0',
                   `cdate` int(11) NOT NULL default '0',
                   `mdate` int(11) NOT NULL default '0',
                   PRIMARY KEY  (`comment_id`),
                   KEY `task` (`task`,`doc`,`data`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_documents`</query>
      <query>
      CREATE TABLE `#__hydra_documents` (
                   `doc_id` int(11) NOT NULL auto_increment,
                   `doc_title` varchar(124) NOT NULL default '',
                   `doc_text` text NOT NULL,
                   `doc_type` int(11) NOT NULL default '0',
                   `project` int(11) NOT NULL default '0',
                   `uid` int(11) NOT NULL default '0',
                   `creator` int(11) NOT NULL default '0',
                   `folder` int(11) NOT NULL default '0',
                   `cdate` int(11) NOT NULL default '0',
                   `mdate` int(11) NOT NULL default '0',
                   `doc_active` int(1) NOT NULL default '1',
                   `doc_access` int(1) NOT NULL default '0',
                   PRIMARY KEY  (`doc_id`),
                   KEY `doc_uptodate` (`doc_active`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_events`</query>
      <query>
      CREATE TABLE `#__hydra_events` (
                   `event_id` int(11) NOT NULL auto_increment,
                   `title` varchar(56) NOT NULL default '',
                   `details` text NOT NULL,
                   `start_date` int(11) NOT NULL default '0',
                   `end_date` int(11) NOT NULL default '0',
                   `creator` int(11) NOT NULL default '0',
                   `shared` int(1) NOT NULL default '0',
                   `color` varchar(6) NOT NULL default '',
                   PRIMARY KEY  (`event_id`),
                   KEY `start_date` (`start_date`,`end_date`),
                   KEY `creator` (`creator`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_files`</query>
      <query>
      CREATE TABLE `#__hydra_files` (
                   `file_id` int(11) NOT NULL auto_increment,
                   `file_name` varchar(255) NOT NULL default '',
                   `file_realname` varchar(255) NOT NULL default '',
                   `file_location` text NOT NULL,
                   `mime_type` varchar(255) NOT NULL default '',
                   `file_size` int(11) NOT NULL default '0',
                   `file_type` int(11) NOT NULL default '0',
                   `project` int(11) NOT NULL default '0',
                   `uid` int(11) NOT NULL default '0',
                   `cdate` int(11) NOT NULL default '0',
                   `mdate` int(11) NOT NULL default '0',
                   `creator` int(11) NOT NULL default '0',
                   `folder` int(11) NOT NULL default '0',
                   `file_active` int(1) NOT NULL default '1',
                   `file_access` int(1) NOT NULL default '0',
                   PRIMARY KEY  (`file_id`),
                   KEY `folder` (`folder`),
                   KEY `file_uptodate` (`file_active`)
                   ) TYPE=MyISAM ; 
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_folder_map`</query>
      <query>
      CREATE TABLE `#__hydra_folder_map` (
                   `folder` int(11) NOT NULL default '0',
                   `parent_folder` int(11) NOT NULL default '0',
                   KEY `folder` (`folder`,`parent_folder`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_folders`</query>
      <query>
      CREATE TABLE `#__hydra_folders` (
                   `folder_id` int(11) NOT NULL auto_increment,
                   `folder_name` varchar(255) NOT NULL default '',
                   `folder_type` int(11) NOT NULL default '0',
                   `project` int(11) NOT NULL default '0',
                   `uid` int(11) NOT NULL default '0',
                   `creator` int(11) NOT NULL default '0',
                   `cdate` int(11) NOT NULL default '0',
                   `mdate` int(11) NOT NULL default '0',
                   `folder_active` int(1) NOT NULL default '1',
                   `folder_access` int(1) NOT NULL default '0',
                   PRIMARY KEY  (`folder_id`),
                   KEY `folder_uptodate` (`folder_active`)
                   ) TYPE=MyISAM 
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_group_members`</query>
      <query>
      CREATE TABLE `#__hydra_group_members` (
                   `gid` int(11) NOT NULL default '0',
                   `uid` int(11) NOT NULL default '0',
                   KEY `gid` (`gid`,`uid`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_groups`</query>
      <query>
      CREATE TABLE `#__hydra_groups` (
                   `group_id` int(11) NOT NULL auto_increment,
                   `group_name` varchar(124) NOT NULL default '',
                   `group_description` text NOT NULL,
                   PRIMARY KEY  (`group_id`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_language`</query>
      <query>
      CREATE TABLE `#__hydra_language` (
                   `id` int(11) NOT NULL auto_increment,
                   `name` varchar(56) NOT NULL default '',
                   `label` varchar(124) NOT NULL default '',
                   PRIMARY KEY  (`id`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_perms`</query>
      <query>
      CREATE TABLE `#__hydra_perms` (
                   `gid` int(11) NOT NULL default '0',
                   `area` varchar(56) NOT NULL default '',
                   `command` varchar(56) NOT NULL default '',
                   KEY `group` (`gid`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_profile`</query>
      <query>
      CREATE TABLE `#__hydra_profile` (
                   `id` int(11) NOT NULL auto_increment,
                   `user_id` int(11) NOT NULL default '0',
                   `parameter` varchar(56) NOT NULL default '',
                   `value` text NOT NULL,
                   KEY `id` (`id`,`user_id`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_project`</query>
      <query>
      CREATE TABLE `#__hydra_project` (
                   `project_id` int(11) NOT NULL auto_increment,
                   `project_name` varchar(124) NOT NULL default '',
                   `project_description` text NOT NULL,
                   `start_date` int(11) NOT NULL default '0',
                   `end_date` int(11) NOT NULL default '0',
                   `mdate` int(11) NOT NULL default '0',
                   PRIMARY KEY  (`project_id`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_project_groups`</query>
      <query>
      CREATE TABLE `#__hydra_project_groups` (
                   `pid` int(11) NOT NULL default '0',
                   `gid` int(11) NOT NULL default '0',
                   KEY `pid` (`pid`,`gid`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_registry`</query>
      <query>
      CREATE TABLE `#__hydra_registry` (
                   `id` int(11) NOT NULL auto_increment,
                   `area` varchar(56) NOT NULL default '',
                   `command` varchar(56) NOT NULL default '',
                   `user_type` int(1) NOT NULL default '0',
                   `area_label` varchar(124) NOT NULL default '',
                   `command_label` varchar(124) NOT NULL default '',
                   `inherit` varchar(56) NOT NULL default '',
                   PRIMARY KEY  (`id`),
                   KEY `area` (`area`,`command`),
                   KEY `inherit` (`inherit`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_settings`</query>
      <query>
      CREATE TABLE `#__hydra_settings` (
                   `version` varchar(255) NOT NULL default '0',
                   `upload_path` text NOT NULL,
                   `debugger` int(1) NOT NULL default '0',
                   `raw_output` int(1) NOT NULL default '0'
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_task`</query>
      <query>
      CREATE TABLE `#__hydra_task` (
                   `task_id` int(11) NOT NULL auto_increment,
                   `project` int(11) NOT NULL default '0',
                   `uid` int(11) NOT NULL default '0',
                   `task_name` varchar(124) NOT NULL default '',
                   `task_description` text NOT NULL,
                   `start_date` int(11) NOT NULL default '0',
                   `end_date` int(11) NOT NULL default '0',
                   `task_status` int(11) NOT NULL default '0',
                   `task_cstatus` varchar(24) NOT NULL,
                   `creator` int(11) NOT NULL default '0',
                   `last_changed` int(11) NOT NULL default '0',
                   `priority` int(1) NOT NULL default '0',
                   PRIMARY KEY  (`task_id`),
                   KEY `project` (`project`,`uid`)
                   ) TYPE=MyISAM ;
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_theme`</query>
      <query>
      CREATE TABLE `#__hydra_theme` (
                   `theme_id` int(11) NOT NULL auto_increment,
                   `name` varchar(56) NOT NULL default '',
                   `label` varchar(124) NOT NULL default '',
                   PRIMARY KEY  (`theme_id`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_users`</query>
      <query>
      CREATE TABLE `#__hydra_users` (
                   `id` int(11) NOT NULL auto_increment,
                   `jid` int(11) NOT NULL default '0',
                   `user_type` int(1) NOT NULL default '0',
                   KEY `id` (`id`,`jid`)
                   ) TYPE=MyISAM
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_task_map`</query>
      <query>
      CREATE TABLE `#__hydra_task_map` (
                   `task` INT( 11 ) NOT NULL ,
                   `parent_task` INT( 11 ) NOT NULL ,
                   INDEX ( `parent_task` )
                   ) TYPE = MYISAM ;
      </query>
      <query>DROP TABLE IF EXISTS `#__hydra_task_notify`</query>
      <query>
      CREATE TABLE `#__hydra_task_notify` (
                   `task` INT( 11 ) NOT NULL ,
                   `uid` INT( 11 ) NOT NULL ,
                   INDEX ( `task` )
                   ) TYPE = MYISAM ;
      </query>
      <query>INSERT INTO `#__hydra_language` VALUES (1, 'english', 'English')</query>
      <query>INSERT INTO `#__hydra_language` VALUES (2, 'german', 'Deutsch')</query>
      <query>INSERT INTO `#__hydra_theme` VALUES (1, 'default', 'Joomla')</query>
    </queries>
</install>
